<UserControl
    x:Class="AvaloniaGUI.Views.DeviceManagerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AvaloniaGUI.ViewModels"
    MinHeight="100"
    d:DesignHeight="400"
    d:DesignWidth="600"
    x:DataType="vm:DeviceManagerViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:DeviceManagerViewModel />
    </Design.DataContext>

    <!--  Device Manager  -->
    <Border
        Margin="5,5,5,5"
        Padding="5,5,5,10"
        Background="{DynamicResource SecondaryBackground}"
        CornerRadius="20">
        <StackPanel>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="White">
                Device Manager
            </Label>
            <Grid ColumnDefinitions="Auto,*">
                <StackPanel
                    Grid.Column="0"
                    Margin="5"
                    Orientation="Horizontal">
                    <Label VerticalAlignment="Center" Foreground="White">
                        Device ID
                    </Label>
                    <TextBox Text="1" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Margin="5"
                    Orientation="Horizontal">
                    <Label VerticalAlignment="Center" Foreground="White">
                        Device Name
                    </Label>
                    <TextBox Text="" />
                </StackPanel>
            </Grid>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Omni Mode Enable
                </Label>
                <CheckBox />
            </StackPanel>
            <Grid ColumnDefinitions="*,*,*,*">
                <Button
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Update
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Reset
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Remove
                </Button>
                <Button
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Clear
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>