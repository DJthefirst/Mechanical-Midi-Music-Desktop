<UserControl
    x:Class="AvaloniaGUI.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:AvaloniaGUI.Views"
    xmlns:vm="clr-namespace:AvaloniaGUI.ViewModels"
    MinWidth="800"
    MinHeight="100"
    x:DataType="vm:MainViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:MainViewModel />
    </Design.DataContext>

    <TabControl Background="{DynamicResource PrimaryBackground}" Foreground="White">
        <TabItem Foreground="White" Header="Home">
            <ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
        </TabItem>
        <TabItem Foreground="{DynamicResource PrimaryForeground}" Header="MIDI">
            <TextBlock Margin="5">This is tab 3 content</TextBlock>
        </TabItem>
    </TabControl>

</UserControl>
