<UserControl
    x:Class="AvaloniaGUI.Views.DistributorManagerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AvaloniaGUI.ViewModels"
    MinHeight="100"
    d:DesignHeight="400"
    d:DesignWidth="600"
    x:DataType="vm:DistributorManagerViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:DistributorManagerViewModel />
    </Design.DataContext>

    <!--  Distributor Manager  -->
    <Border
        Margin="5,5,5,5"
        Padding="5,5,5,10"
        Background="{DynamicResource SecondaryBackground}"
        CornerRadius="20">
        <StackPanel>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="White">
                Distruibutor Manager
            </Label>
            <Grid ColumnDefinitions="*,*">
                <Grid
                    Grid.Column="0"
                    Margin="0"
                    ColumnDefinitions="auto,*">
                    <Label
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Foreground="White">
                        Channels
                    </Label>
                    <TextBox
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Text="{Binding StrChannels, Mode=TwoWay}" />
                </Grid>
                <Grid
                    Grid.Column="1"
                    Margin="0"
                    ColumnDefinitions="auto,*">
                    <Label
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Foreground="White">
                        Instruments
                    </Label>
                    <TextBox
                        Grid.Column="1"
                        Margin="0,0,10,0"
                        Text="{Binding StrInstruments, Mode=TwoWay}" />
                </Grid>
            </Grid>
            <StackPanel Margin="0" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Distribution Method
                </Label>
                <ComboBox ItemsSource="{Binding DistributionMethods}" SelectedItem="{Binding Distribution, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Damper
                </Label>
                <CheckBox IsChecked="{Binding Damper, Mode=TwoWay}" />
                <Label VerticalAlignment="Center" Foreground="White">
                    Polyphonic
                </Label>
                <CheckBox IsChecked="{Binding Polyphonic, Mode=TwoWay}" />
                <Label VerticalAlignment="Center" Foreground="White">
                    Note Overwrite
                </Label>
                <CheckBox IsChecked="{Binding NoteOverwrite, Mode=TwoWay}" />
                <Label VerticalAlignment="Center" Foreground="White">
                    Vibrato
                </Label>
                <CheckBox IsChecked="{Binding Vibrato, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Note Min/Max
                </Label>
                <TextBox Text="{Binding MinNote, Mode=TwoWay}" />
                <Label VerticalAlignment="Center" Foreground="White">
                    -
                </Label>
                <TextBox Text="{Binding MaxNote, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Number of Polyphonic Notes
                </Label>
                <TextBox Text="{Binding NumPolyphonicNotes, Mode=TwoWay}" />
            </StackPanel>

            <Grid ColumnDefinitions="*,*,*,*">
                <Button
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding UpdateCommand}">
                    Update
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding AddCommand}">
                    Add
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding RemoveCommand}">
                    Remove
                </Button>
                <Button
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Command="{Binding ClearCommand}">
                    Clear
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>