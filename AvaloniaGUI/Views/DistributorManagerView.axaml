<UserControl
    x:Class="AvaloniaGUI.Views.DistributorManagerView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AvaloniaGUI.ViewModels"
    MinHeight="100"
    d:DesignHeight="400"
    d:DesignWidth="600"
    x:DataType="vm:DistributorManagerViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:DistributorManagerViewModel />
    </Design.DataContext>

    <!--  Distributor Manager  -->
    <Border
        Margin="5,5,5,5"
        Padding="5,5,5,10"
        Background="{DynamicResource SecondaryBackground}"
        CornerRadius="20">
        <StackPanel>
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                Foreground="White">
                Distruibutor Manager
            </Label>
            <StackPanel Margin="0" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Channels
                </Label>
                <TextBox Text="1-4" />
            </StackPanel>
            <StackPanel Margin="0" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Instruments
                </Label>
                <ComboBox>
                    <ComboBoxItem>RoundRobinBalance</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Damper Enable
                </Label>
                <CheckBox />
                <Label VerticalAlignment="Center" Foreground="White">
                    Polyphonic Enable
                </Label>
                <CheckBox />
                <Label VerticalAlignment="Center" Foreground="White">
                    Note Overwrite
                </Label>
                <CheckBox />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Note Min/Max
                </Label>
                <TextBox Text="0" />
                <Label VerticalAlignment="Center" Foreground="White">
                    -
                </Label>
                <TextBox Text="127" />
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Foreground="White">
                    Number of Polyphonic Notes
                </Label>
                <TextBox Text="1" />
            </StackPanel>

            <Grid ColumnDefinitions="*,*,*,*">
                <Button
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Update
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Reset
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Remove
                </Button>
                <Button
                    Grid.Column="3"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Clear
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>