<UserControl
    x:Class="AvaloniaGUI.Views.MidiPageView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:AvaloniaGUI.Views"
    xmlns:vm="clr-namespace:AvaloniaGUI.ViewModels"
    MinHeight="100"
    d:DesignHeight="800"
    d:DesignWidth="1400"
    x:DataType="vm:MidiPageViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:DesignMidiPageViewModel />
    </Design.DataContext>



    <Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="Auto,*,*">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel
                Grid.Column="0"
                MinWidth="600"
                MaxWidth="600"
                VerticalAlignment="Top">
                <!--  MIDI Player  -->
                <ContentControl MaxHeight="275" Content="{Binding MidiPlayerPage}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>	